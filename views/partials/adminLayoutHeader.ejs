<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Admin' %> - GamePlan</title>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="/admin-styles.css">
  <style>
    /* Admin-specific styles */
    .admin-layout {
      min-height: 100vh;
      background: #000;
      color: #00ff00;
      font-family: 'Press Start 2P', monospace;
    }
    
    .admin-header {
      background: rgba(0, 20, 0, 0.9);
      border-bottom: 2px solid #00ff00;
      padding: 15px 20px;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    
    .admin-header-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }
    
    .admin-logo {
      font-size: 14px;
      color: #00ff00;
      text-shadow: 0 0 10px #00ff00;
      margin: 0;
    }
    
    .admin-header-actions {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .admin-nav {
      display: flex;
      align-items: center;
      gap: 0;
      list-style: none;
      margin: 0;
      padding: 0;
      flex-wrap: wrap;
    }
    
    .admin-nav-item {
      border-right: 1px solid rgba(0, 255, 0, 0.2);
    }
    
    .admin-nav-item:last-child {
      border-right: none;
    }
    
    .admin-nav-link {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: #00ff00;
      text-decoration: none;
      font-size: 10px;
      transition: all 0.3s ease;
      border-bottom: 3px solid transparent;
      white-space: nowrap;
    }
    
    .admin-nav-link:hover {
      background: rgba(0, 255, 0, 0.1);
      border-bottom-color: #00ff00;
    }
    
    .admin-nav-link.active {
      background: rgba(0, 255, 0, 0.2);
      border-bottom-color: #00ff00;
      color: #fff;
    }
    
    .admin-nav-icon {
      margin-right: 8px;
      font-size: 12px;
    }
    
    .admin-nav-badge {
      margin-left: 8px;
      background: #ff0000;
      color: #fff;
      padding: 2px 6px;
      border-radius: 10px;
      font-size: 8px;
      min-width: 16px;
      text-align: center;
    }
    
    .admin-main {
      background: rgba(0, 10, 0, 0.8);
      min-height: calc(100vh - 120px);
    }
    
    .admin-topbar {
      background: rgba(0, 30, 0, 0.9);
      border-bottom: 1px solid rgba(0, 255, 0, 0.3);
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .admin-breadcrumb {
      display: flex;
      align-items: center;
      font-size: 10px;
      color: #888;
    }
    
    .admin-breadcrumb a {
      color: #00ff00;
      text-decoration: none;
    }
    
    .admin-breadcrumb-separator {
      margin: 0 10px;
      color: #555;
    }
    
    .admin-topbar-actions {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    
    .admin-user-menu {
      position: relative;
    }
    
    .admin-user-button {
      background: none;
      border: 1px solid #00ff00;
      color: #00ff00;
      padding: 8px 12px;
      cursor: pointer;
      font-size: 8px;
      font-family: 'Press Start 2P', monospace;
    }
    
    .admin-user-button:hover {
      background: rgba(0, 255, 0, 0.1);
    }
    
    .admin-content {
      padding: 30px;
    }
    
    .admin-page-header {
      margin-bottom: 30px;
    }
    
    .admin-page-title {
      font-size: 18px;
      color: #00ff00;
      text-shadow: 0 0 10px #00ff00;
      margin: 0 0 10px 0;
    }
    
    .admin-page-subtitle {
      font-size: 10px;
      color: #888;
      margin: 0;
    }
    
    .mobile-menu-toggle {
      display: none;
      background: none;
      border: 1px solid #00ff00;
      color: #00ff00;
      padding: 8px;
      cursor: pointer;
      font-size: 12px;
    }
    
    .mobile-nav-dropdown {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(0, 20, 0, 0.95);
      border-bottom: 2px solid #00ff00;
      z-index: 999;
    }
    
    .mobile-nav-dropdown.active {
      display: block;
    }
    
    .mobile-nav-dropdown .admin-nav {
      flex-direction: column;
      gap: 0;
    }
    
    .mobile-nav-dropdown .admin-nav-item {
      border-right: none;
      border-bottom: 1px solid rgba(0, 255, 0, 0.2);
    }
    
    .mobile-nav-dropdown .admin-nav-link {
      padding: 15px 20px;
      border-bottom: none;
      justify-content: flex-start;
    }
    
    /* Mobile Responsive */
    @media (max-width: 768px) {
      .admin-header-top {
        margin-bottom: 10px;
      }
      
      .admin-nav {
        display: none;
      }
      
      .mobile-menu-toggle {
        display: block;
      }
      
      .admin-topbar {
        padding: 15px 20px;
      }
      
      .admin-content {
        padding: 20px;
      }
      
      .admin-breadcrumb {
        display: none;
      }
      
      .admin-logo {
        font-size: 12px;
      }
    }
    
    /* Development banner */
    .dev-banner {
      background: #ff6600;
      color: #000;
      text-align: center;
      padding: 5px;
      font-size: 8px;
      position: sticky;
      top: 0;
      z-index: 1001;
    }
  </style>
</head>
<body>
  <div class="scanlines"></div>
  
  <% if (isDevelopmentAutoLogin) { %>
    <div class="dev-banner">
      üîß DEVELOPMENT MODE - Auto-logged in as Admin
    </div>
  <% } %>
  
  <div class="admin-layout">
    <!-- Top Header with Navigation -->
    <header class="admin-header">
      <div class="admin-header-top">
        <h1 class="admin-logo">GamePlan Admin</h1>
        
        <div class="admin-header-actions">
          <button class="mobile-menu-toggle" id="mobileMenuToggle">‚ò∞</button>
          
          <div class="admin-user-menu">
            <button class="admin-user-button" onclick="toggleUserMenu()">
              <%= user ? user.name : 'Admin' %> ‚ñº
            </button>
          </div>
        </div>
      </div>
      
      <!-- Main Navigation -->
      <nav>
        <ul class="admin-nav">
          <li class="admin-nav-item">
            <a href="/admin" class="admin-nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
              <span class="admin-nav-icon">üìä</span>
              Dashboard
            </a>
          </li>
          
          <li class="admin-nav-item">
            <a href="/admin/events" class="admin-nav-link <%= currentPage === 'events' ? 'active' : '' %>">
              <span class="admin-nav-icon">üéÆ</span>
              Events
              <% if (typeof pendingEvents !== 'undefined' && pendingEvents > 0) { %>
                <span class="admin-nav-badge"><%= pendingEvents %></span>
              <% } %>
            </a>
          </li>
          
          <li class="admin-nav-item">
            <a href="/admin/users" class="admin-nav-link <%= currentPage === 'users' ? 'active' : '' %>">
              <span class="admin-nav-icon">üë•</span>
              Users
              <% if (typeof pendingUsers !== 'undefined' && pendingUsers > 0) { %>
                <span class="admin-nav-badge"><%= pendingUsers %></span>
              <% } %>
            </a>
          </li>
          
          <li class="admin-nav-item">
            <a href="/admin/games" class="admin-nav-link <%= currentPage === 'games' ? 'active' : '' %>">
              <span class="admin-nav-icon">üéØ</span>
              Games
              <% if (typeof pendingGames !== 'undefined' && pendingGames > 0) { %>
                <span class="admin-nav-badge"><%= pendingGames %></span>
              <% } %>
            </a>
          </li>
          
          <li class="admin-nav-item">
            <a href="/admin/error-logs" class="admin-nav-link <%= currentPage === 'error-logs' ? 'active' : '' %>">
              <span class="admin-nav-icon">üö®</span>
              Error Logs
            </a>
          </li>
          
          <li class="admin-nav-item">
            <a href="/admin/system" class="admin-nav-link <%= currentPage === 'system' ? 'active' : '' %>">
              <span class="admin-nav-icon">‚öôÔ∏è</span>
              System
            </a>
          </li>
          
          <li class="admin-nav-item">
            <a href="/" class="admin-nav-link">
              <span class="admin-nav-icon">üè†</span>
              Back to Site
            </a>
          </li>
        </ul>
        
        <!-- Mobile Navigation Dropdown -->
        <div class="mobile-nav-dropdown" id="mobileNavDropdown">
          <ul class="admin-nav">
            <li class="admin-nav-item">
              <a href="/admin" class="admin-nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
                <span class="admin-nav-icon">üìä</span>
                Dashboard
              </a>
            </li>
            
            <li class="admin-nav-item">
              <a href="/admin/events" class="admin-nav-link <%= currentPage === 'events' ? 'active' : '' %>">
                <span class="admin-nav-icon">üéÆ</span>
                Events
                <% if (typeof pendingEvents !== 'undefined' && pendingEvents > 0) { %>
                  <span class="admin-nav-badge"><%= pendingEvents %></span>
                <% } %>
              </a>
            </li>
            
            <li class="admin-nav-item">
              <a href="/admin/users" class="admin-nav-link <%= currentPage === 'users' ? 'active' : '' %>">
                <span class="admin-nav-icon">üë•</span>
                Users
                <% if (typeof pendingUsers !== 'undefined' && pendingUsers > 0) { %>
                  <span class="admin-nav-badge"><%= pendingUsers %></span>
                <% } %>
              </a>
            </li>
            
            <li class="admin-nav-item">
              <a href="/admin/games" class="admin-nav-link <%= currentPage === 'games' ? 'active' : '' %>">
                <span class="admin-nav-icon">üéØ</span>
                Games
                <% if (typeof pendingGames !== 'undefined' && pendingGames > 0) { %>
                  <span class="admin-nav-badge"><%= pendingGames %></span>
                <% } %>
              </a>
            </li>
            
            <li class="admin-nav-item">
              <a href="/admin/error-logs" class="admin-nav-link <%= currentPage === 'error-logs' ? 'active' : '' %>">
                <span class="admin-nav-icon">üö®</span>
                Error Logs
              </a>
            </li>
            
            <li class="admin-nav-item">
              <a href="/admin/system" class="admin-nav-link <%= currentPage === 'system' ? 'active' : '' %>">
                <span class="admin-nav-icon">‚öôÔ∏è</span>
                System
              </a>
            </li>
            
            <li class="admin-nav-item">
              <a href="/" class="admin-nav-link">
                <span class="admin-nav-icon">üè†</span>
                Back to Site
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    
    <!-- Main Content -->
    <main class="admin-main">
      <!-- Breadcrumb Bar -->
      <div class="admin-topbar">
        <nav class="admin-breadcrumb">
          <a href="/admin">Admin</a>
          <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs.length > 0) { %>
            <% breadcrumbs.forEach(crumb => { %>
              <span class="admin-breadcrumb-separator">‚Ä∫</span>
              <% if (crumb.url) { %>
                <a href="<%= crumb.url %>"><%= crumb.name %></a>
              <% } else { %>
                <span><%= crumb.name %></span>
              <% } %>
            <% }); %>
          <% } %>
        </nav>
      </div>
      
      <!-- Page Content -->
      <div class="admin-content">
        <% if (typeof pageTitle !== 'undefined' || typeof pageSubtitle !== 'undefined') { %>
          <div class="admin-page-header">
            <% if (typeof pageTitle !== 'undefined') { %>
              <h1 class="admin-page-title"><%= pageTitle %></h1>
            <% } %>
            <% if (typeof pageSubtitle !== 'undefined') { %>
              <p class="admin-page-subtitle"><%= pageSubtitle %></p>
            <% } %>
          </div>
        <% } %>
