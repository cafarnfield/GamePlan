<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event - GamePlan</title>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="scanlines"></div>
  <header>
    <h1>GamePlan</h1>
    <nav>
      <a href="/">Home</a>
    </nav>
  </header>
  <main>
    <h2><%= event.name %></h2>
    <p><%= event.description %></p>
    <p>Player Limit: <%= event.playerLimit %></p>
    <p>Current Players: <%= event.players.length %></p>
      <% if (event.createdBy) { %>
        <p>Created by: <%= event.createdBy.gameNickname ? event.createdBy.gameNickname : event.createdBy.name %></p>
      <% } else if (event.players.length > 0) { %>
        <p>Created by: <%= event.players[0].gameNickname ? event.players[0].gameNickname : event.players[0].name %></p>
      <% } %>

    <% if (event.hasUpdate) { %>
      <div class="update-alert">
        <h3>Update Available</h3>
        <p>This game has a recent update. Please make sure to update before the event.</p>
        <ul>
          <% event.updateNews.forEach(newsItem => { %>
            <li>
              <strong><%= newsItem.title %></strong><br>
              <%= newsItem.contents %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (event.platforms && event.platforms.length > 0) { %>
      <h3>Platforms</h3>
      <div class="platforms">
        <% event.platforms.forEach(platform => { %>
          <span class="platform-tag"><%= platform %></span>
        <% }) %>
      </div>
    <% } %>

    <% if (event.requiredExtensions && event.requiredExtensions.length > 0) { %>
      <h3>Required Extensions</h3>
      <ul>
        <% event.requiredExtensions.forEach(extension => { %>
          <li>
            <strong>Name:</strong> <%= extension.name %><br>
            <strong>Installation Time:</strong> <%= extension.installationTime %> minutes<br>
            <strong>Download:</strong> <a href="<%= extension.downloadLink %>" target="_blank">Link</a>
          </li>
        <% }) %>
      </ul>
    <% } %>

    <h3>Players</h3>
    <ul>
      <% event.players.forEach(player => { %>
        <li><%= player.gameNickname ? player.gameNickname : player.name %></li>
      <% }) %>
    </ul>
<% if (typeof user !== 'undefined') { %>
      <% 
        const isCreator = event.createdBy && event.createdBy._id.equals(user._id);
        const isLegacyCreator = !event.createdBy && event.players.length > 0 && event.players[0]._id.equals(user._id);
        const canEdit = isCreator || isLegacyCreator || user.isAdmin;
        const canDelete = isCreator || isLegacyCreator || user.isAdmin;
      %>
      <% if (canEdit) { %> <!-- Show edit button to event creator or admins -->
        <form action="/event/<%= event._id %>/edit" method="GET" class="event-button" style="display: inline-block; margin-right: 10px;">
          <button type="submit">Edit Event</button>
        </form>
      <% } %>
      <% if (canDelete) { %> <!-- Show delete button to event creator or admins -->
        <form action="/event/<%= event._id %>/delete" method="POST" class="event-button" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this event? This action cannot be undone.');">
          <button type="submit">Delete Event</button>
        </form>
      <% } %>
      <% if (event.players.some(player => player._id.equals(user._id))) { %>
        <form action="/event/<%= event._id %>/leave" method="POST" class="event-button">
          <button type="submit">Leave Event</button>
        </form>
      <% } else if (event.players.length < event.playerLimit) { %>
        <form action="/event/<%= event._id %>/join" method="POST" class="event-button">
          <button type="submit">Join Event</button>
        </form>
      <% } else { %>
        <p>Event is full</p>
      <% } %>
    <% } else { %>
      <p>Please <a href="/login">log in</a> to join this event</p>
    <% } %>
  </main>
</body>
</html>
