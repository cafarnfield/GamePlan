<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - GamePlan</title>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin: 20px 0;
    }
    .dashboard-card {
      background: rgba(0, 0, 0, 0.8);
      border: 2px solid #00ff00;
      padding: 20px;
      margin: 10px 0;
    }
    .dashboard-card h3 {
      color: #00ff00;
      margin-top: 0;
      font-size: 14px;
    }
    .stat-number {
      font-size: 24px;
      color: #ffff00;
      margin: 10px 0;
    }
    .stat-label {
      font-size: 10px;
      color: #888;
    }
    .quick-actions {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin: 15px 0;
    }
    .quick-action-btn {
      background: #0066cc;
      color: white;
      border: 1px solid #0066cc;
      padding: 8px 12px;
      font-family: 'Press Start 2P', monospace;
      font-size: 8px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
    .quick-action-btn:hover {
      background: #0052a3;
    }
    .pending-alert {
      background: rgba(255, 255, 0, 0.2);
      border: 2px solid #ffff00;
      color: #ffff00;
      padding: 15px;
      margin: 15px 0;
      text-align: center;
      animation: pulse 2s infinite;
    }
    .recent-activity {
      max-height: 300px;
      overflow-y: auto;
      border: 1px solid #333;
      padding: 10px;
      background: rgba(0, 0, 0, 0.5);
    }
    .activity-item {
      padding: 8px 0;
      border-bottom: 1px solid #333;
      font-size: 10px;
    }
    .activity-item:last-child {
      border-bottom: none;
    }
    .activity-time {
      color: #888;
    }
    .activity-action {
      color: #00ff00;
    }
    .ip-analytics {
      font-size: 10px;
      color: #ccc;
    }
    .ip-item {
      display: flex;
      justify-content: space-between;
      padding: 5px 0;
      border-bottom: 1px solid #333;
    }
    .search-container {
      margin: 20px 0;
      padding: 15px;
      border: 1px solid #00ff00;
      background: rgba(0, 255, 0, 0.1);
    }
    .search-input {
      width: 100%;
      padding: 10px;
      background: #000;
      color: #00ff00;
      border: 1px solid #00ff00;
      font-family: 'Press Start 2P', monospace;
      font-size: 10px;
      margin: 5px 0;
    }
    .search-filters {
      display: flex;
      gap: 10px;
      margin: 10px 0;
      flex-wrap: wrap;
    }
    .filter-select {
      background: #000;
      color: #00ff00;
      border: 1px solid #00ff00;
      padding: 5px;
      font-family: 'Press Start 2P', monospace;
      font-size: 8px;
    }
  </style>
</head>
<body>
  <div class="scanlines"></div>
  <% if (isDevelopmentAutoLogin) { %>
    <div class="dev-banner">
      üîß DEVELOPMENT MODE - Auto-logged in as Admin
    </div>
  <% } %>
  <header>
    <h1>GamePlan Admin Dashboard</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/admin">Admin Panel</a>
      <a href="/admin/users">Manage Users</a>
    </nav>
  </header>
  <main>
    <h2>Dashboard Overview</h2>

    <% if (stats.pendingUsers > 0) { %>
    <div class="pending-alert">
      ‚ö†Ô∏è <strong><%= stats.pendingUsers %> user(s) pending approval</strong>
      <a href="/admin/users?filter=pending" style="margin-left: 15px; color: #ffff00;">Review Now ‚Üí</a>
    </div>
    <% } %>

    <div class="dashboard-grid">
      <!-- User Statistics -->
      <div class="dashboard-card">
        <h3>üë• User Statistics</h3>
        <div class="stat-number"><%= stats.totalUsers %></div>
        <div class="stat-label">Total Users</div>
        
        <div style="margin: 15px 0;">
          <div>Approved: <span style="color: #00ff00;"><%= stats.approvedUsers %></span></div>
          <div>Pending: <span style="color: #ffff00;"><%= stats.pendingUsers %></span></div>
          <div>Rejected: <span style="color: #ff6666;"><%= stats.rejectedUsers %></span></div>
          <div>Blocked: <span style="color: #ff0000;"><%= stats.blockedUsers %></span></div>
        </div>

        <div class="quick-actions">
          <a href="/admin/users?filter=pending" class="quick-action-btn">Review Pending</a>
          <a href="/admin/users" class="quick-action-btn">All Users</a>
        </div>
      </div>

      <!-- Registration Analytics -->
      <div class="dashboard-card">
        <h3>üìä Registration Analytics</h3>
        <div class="stat-number"><%= stats.recentRegistrations %></div>
        <div class="stat-label">Last 7 Days</div>
        
        <div style="margin: 15px 0;">
          <div>This Month: <span style="color: #00ff00;"><%= stats.monthlyRegistrations %></span></div>
          <div>Approval Rate: <span style="color: #ffff00;"><%= stats.approvalRate %>%</span></div>
        </div>

        <div class="quick-actions">
          <a href="/admin/audit-logs" class="quick-action-btn">View Audit Logs</a>
        </div>
      </div>

      <!-- IP Analytics -->
      <div class="dashboard-card">
        <h3>üåê IP Analytics</h3>
        <div class="ip-analytics">
          <% if (stats.suspiciousIPs && stats.suspiciousIPs.length > 0) { %>
            <div style="color: #ff6666; margin-bottom: 10px;">‚ö†Ô∏è Suspicious Activity Detected</div>
            <% stats.suspiciousIPs.forEach(ip => { %>
              <div class="ip-item">
                <span><%= ip._id %></span>
                <span style="color: #ff6666;"><%= ip.count %> registrations</span>
              </div>
            <% }); %>
          <% } else { %>
            <div style="color: #00ff00;">‚úÖ No suspicious activity detected</div>
          <% } %>
        </div>

        <div class="quick-actions">
          <a href="/admin/ip-analytics" class="quick-action-btn">Full IP Report</a>
        </div>
      </div>

      <!-- System Health -->
      <div class="dashboard-card">
        <h3>‚ö° System Health</h3>
        <div style="margin: 15px 0; font-size: 10px;">
          <div>Active Events: <span style="color: #00ff00;"><%= stats.activeEvents %></span></div>
          <div>Total Games: <span style="color: #00ff00;"><%= stats.totalGames %></span></div>
          <div>Probationary Users: <span style="color: #ffff00;"><%= stats.probationaryUsers %></span></div>
        </div>

        <div class="quick-actions">
          <a href="/admin" class="quick-action-btn">Manage Games</a>
          <a href="/admin/bulk-actions" class="quick-action-btn">Bulk Actions</a>
        </div>
      </div>
    </div>

    <!-- Advanced User Search -->
    <div class="search-container">
      <h3>üîç Advanced User Search</h3>
      <form action="/admin/users/search" method="GET">
        <input type="text" name="q" class="search-input" placeholder="Search by name, email, or game nickname..." value="<%= searchQuery || '' %>">
        
        <div class="search-filters">
          <select name="status" class="filter-select">
            <option value="">All Statuses</option>
            <option value="pending" <%= searchFilters.status === 'pending' ? 'selected' : '' %>>Pending</option>
            <option value="approved" <%= searchFilters.status === 'approved' ? 'selected' : '' %>>Approved</option>
            <option value="rejected" <%= searchFilters.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
          </select>
          
          <select name="blocked" class="filter-select">
            <option value="">All Users</option>
            <option value="true" <%= searchFilters.blocked === 'true' ? 'selected' : '' %>>Blocked Only</option>
            <option value="false" <%= searchFilters.blocked === 'false' ? 'selected' : '' %>>Not Blocked</option>
          </select>
          
          <select name="admin" class="filter-select">
            <option value="">All Roles</option>
            <option value="true" <%= searchFilters.admin === 'true' ? 'selected' : '' %>>Admins Only</option>
            <option value="false" <%= searchFilters.admin === 'false' ? 'selected' : '' %>>Regular Users</option>
          </select>
          
          <input type="date" name="dateFrom" class="filter-select" value="<%= searchFilters.dateFrom || '' %>" placeholder="From Date">
          <input type="date" name="dateTo" class="filter-select" value="<%= searchFilters.dateTo || '' %>" placeholder="To Date">
        </div>
        
        <button type="submit" class="quick-action-btn">Search Users</button>
        <a href="/admin/dashboard" class="quick-action-btn">Clear Filters</a>
      </form>
    </div>

    <!-- Recent Activity -->
    <div class="dashboard-card">
      <h3>üìã Recent Admin Activity</h3>
      <div class="recent-activity">
        <% if (recentActivity && recentActivity.length > 0) { %>
          <% recentActivity.forEach(activity => { %>
            <div class="activity-item">
              <div class="activity-time"><%= new Date(activity.timestamp).toLocaleString() %></div>
              <div class="activity-action">
                <strong><%= activity.adminName %></strong> 
                <%= activity.action.replace('_', ' ') %> 
                <% if (activity.targetUserEmail) { %>
                  user: <em><%= activity.targetUserEmail %></em>
                <% } %>
                <% if (activity.bulkCount > 1) { %>
                  (<%= activity.bulkCount %> users)
                <% } %>
              </div>
              <% if (activity.notes) { %>
                <div style="color: #888; font-size: 8px; margin-top: 3px;">
                  Note: <%= activity.notes %>
                </div>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <div style="text-align: center; color: #888; padding: 20px;">
            No recent activity
          </div>
        <% } %>
      </div>
    </div>
  </main>
</body>
</html>
