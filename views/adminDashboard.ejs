<% 
  const layoutData = {
    title: 'Dashboard',
    currentPage: 'dashboard',
    pageTitle: 'Admin Dashboard',
    pageSubtitle: 'Overview of your GamePlan administration',
    breadcrumbs: [],
    pendingUsers: stats.pendingUsers,
    pendingEvents: stats.pendingEvents || 0,
    pendingGames: stats.pendingGames || 0,
    totalPending: (stats.pendingUsers || 0) + (stats.pendingEvents || 0) + (stats.pendingGames || 0),
    isDevelopmentAutoLogin: isDevelopmentAutoLogin,
    user: typeof user !== 'undefined' ? user : null
  };
%>

<%- include('partials/adminLayoutHeader', layoutData) %>

<style>
  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .dashboard-card {
    background: rgba(0, 20, 0, 0.8);
    border: 2px solid #00ff00;
    padding: 20px;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .dashboard-card:hover {
    border-color: #00ffff;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }
  
  .dashboard-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 15px;
  }
  
  .dashboard-card-title {
    font-size: 12px;
    color: #00ff00;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .dashboard-card-icon {
    font-size: 16px;
  }
  
  .dashboard-card-value {
    font-size: 24px;
    color: #00ffff;
    text-shadow: 0 0 10px #00ffff;
    margin: 10px 0;
  }
  
  .dashboard-card-subtitle {
    font-size: 8px;
    color: #888;
    margin-bottom: 15px;
  }
  
  .dashboard-card-actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .dashboard-btn {
    background: rgba(0, 100, 255, 0.8);
    color: #fff;
    border: 1px solid #0066ff;
    padding: 8px 12px;
    font-family: 'Press Start 2P', monospace;
    font-size: 8px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .dashboard-btn:hover {
    background: rgba(0, 150, 255, 0.9);
    box-shadow: 0 0 10px rgba(0, 100, 255, 0.5);
  }
  
  .dashboard-btn.primary {
    background: rgba(0, 255, 0, 0.8);
    color: #000;
    border-color: #00ff00;
  }
  
  .dashboard-btn.primary:hover {
    background: rgba(0, 255, 0, 0.9);
  }
  
  .dashboard-btn.danger {
    background: rgba(255, 0, 0, 0.8);
    border-color: #ff0000;
  }
  
  .dashboard-btn.danger:hover {
    background: rgba(255, 0, 0, 0.9);
  }
  
  .alert-card {
    background: rgba(255, 100, 0, 0.1);
    border-color: #ff6600;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }
  
  .stats-row {
    display: flex;
    justify-content: space-between;
    margin: 10px 0;
    font-size: 10px;
  }
  
  .stats-label {
    color: #888;
  }
  
  .stats-value {
    color: #00ff00;
  }
  
  .recent-activity {
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid #333;
    background: rgba(0, 0, 0, 0.5);
    padding: 15px;
  }
  
  .activity-item {
    padding: 10px 0;
    border-bottom: 1px solid #333;
    font-size: 10px;
  }
  
  .activity-item:last-child {
    border-bottom: none;
  }
  
  .activity-time {
    color: #888;
    font-size: 8px;
  }
  
  .activity-action {
    color: #00ff00;
    margin: 5px 0;
  }
  
  .activity-details {
    color: #ccc;
    font-size: 8px;
  }
  
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    margin-top: 30px;
  }
  
  .quick-action-card {
    background: rgba(0, 10, 20, 0.8);
    border: 1px solid #0066ff;
    padding: 15px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .quick-action-card:hover {
    border-color: #00ffff;
    background: rgba(0, 20, 40, 0.9);
  }
  
  .quick-action-icon {
    font-size: 20px;
    margin-bottom: 10px;
    display: block;
  }
  
  .quick-action-title {
    font-size: 10px;
    color: #00ff00;
    margin-bottom: 5px;
  }
  
  .quick-action-desc {
    font-size: 8px;
    color: #888;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }
    
    .dashboard-card-actions {
      flex-direction: column;
    }
    
    .dashboard-btn {
      text-align: center;
    }
    
    .quick-actions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<!-- Alert Cards for Urgent Items -->
