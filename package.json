{
  "name": "gameplan",
  "version": "1.0.0",
  "main": "app.js",
  "engines": {
    "node": ">=24.2.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "dev": "MONGO_URI=mongodb://localhost:27017/gameplan npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cafarnfield/GamePlan.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cafarnfield/GamePlan/issues"
  },
  "homepage": "https://github.com/cafarnfield/GamePlan#readme",
  "description": "",
  "dependencies": {
    "@mongodb-js/zstd": "^1.2.2",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.3",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "mongoose": "^8.8.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tough-cookie": "^5.1.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "middleware/**/*.js",
      "routes/**/*.js",
      "validators/**/*.js",
      "models/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ]
  }
}
